{
  "name": "@structcms/core",
  "version": "0.1.0",
  "description": "Core modeling, validation, and types for StructCMS",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "2.1.9",
    "typescript": "~5.7.0"
  },
  "peerDependencies": {
    "zod": "^3.23.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "author": "Sebastian Krischer",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/skrischer/structcms.git",
    "directory": "packages/core"
  },
  "keywords": [
    "cms",
    "headless-cms",
    "typescript",
    "zod",
    "content-management",
    "code-first",
    "type-safe",
    "content-modeling"
  ]
}
