{
  "name": "@structcms/api",
  "version": "0.0.1",
  "description": "Storage, domain API, and delivery API for StructCMS",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "gen:types": "npx supabase gen types typescript --project-id arwaynscjejiwpcurnjs > src/types/database.types.ts",
    "test": "vitest"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.45.0",
    "sanitize-html": "^2.17.0"
  },
  "devDependencies": {
    "@types/sanitize-html": "^2.16.0",
    "typescript": "~5.7.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/skrischer/structcms.git",
    "directory": "packages/api"
  }
}
